<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/destinations/new.css" />
<%- include('../partials/nav') %>

<main>
  <h1><%= title %></h1>
  <p>Please first ensure that the destination is not in the dropdown
    <select>
      <% destinations.forEach(function(destination) { %> 
        <option><%= destination.name %> </option>
      <% }) %> 
    </select>
  </p>
  <form id="add-destination-form" action="/destinations" method="POST">
    <label for="name-input">Name:</label>
    <input type="text" name="name" id="name-input">
    <label for="date-input">Born:</label>
    <input type="date" name="born" id="date-input">
    <button type="submit">Add destination</button>
  </form>
</main>

<%- include("../partials/footer") %> 